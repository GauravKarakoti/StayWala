<% layout('/layouts/boilerplates') -%>

<div class="row">
  <div class="col-8 offset-2 mt-4">
    <div class="listing-card">
      <h2 class="title-text">Create a New Listing</h2>
      <form method="POST" action="/listings" novalidate class="needs-validation">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" placeholder="Enter title" type="text" class="form-control fancy-input"/>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" placeholder="Enter description" class="form-control fancy-input"></textarea>
          <div class="invalid-feedback">Please Enter a valid Description</div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Image Link</label>
          <input name="listing[image]" placeholder="Enter image URL" type="text" class="form-control fancy-input" required />
        </div>

        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" placeholder="Enter price" type="number" class="form-control fancy-input" required />
          <div class="invalid-feedback">Please Enter a valid Price</div>
        </div>

        <div class="mb-3">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" placeholder="Enter country" type="text" class="form-control fancy-input" required/>
          <div class="invalid-feedback">Please Enter a valid Country</div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" placeholder="Enter Location" type="text" class="form-control fancy-input" required/>
          <div class="invalid-feedback">Please Enter a valid Location</div>
        </div>

        <br>
        <button type="submit" class="btn add-btn">âž• Add Listing</button>
        <br><br>
      </form>
    </div>
  </div>
</div>

<style>
  /* Aesthetic Glassmorphism UI */
  body {
    background: linear-gradient(135deg, #1f1c2c, #928dab);
    color: #fff;
    font-family: 'Poppins', sans-serif;
  }

  .listing-card {
    background: rgba(255, 255, 255, 0.1);
    padding: 25px;
    border-radius: 15px;
    backdrop-filter: blur(12px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    animation: fadeIn 1s ease-in-out;
  }

  .title-text {
    font-size: 2rem;
    font-weight: bold;
    text-align: center;
    text-shadow: 2px 2px 10px rgba(255, 255, 255, 0.3);
  }

  .fancy-input {
    background: rgba(255, 255, 255, 0.2);
    border: none;
    padding: 12px;
    border-radius: 12px;
    color: #fff;
    transition: all 0.3s ease-in-out;
  }

  .fancy-input:focus {
    background: rgba(255, 255, 255, 0.3);
    box-shadow: 0 0 15px rgba(255, 255, 255, 0.5);
    outline: none;
  }

  .add-btn {
    width: 100%;
    padding: 12px;
    font-size: 1.2rem;
    font-weight: bold;
    border-radius: 12px;
    background: linear-gradient(45deg, #ff9a9e, #fad0c4);
    color: #222;
    border: none;
    transition: transform 0.2s ease-in-out;
  }

  .add-btn:hover {
    transform: scale(1.05);
    background: linear-gradient(45deg, #ff758c, #ff7eb3);
  }

  /* Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
